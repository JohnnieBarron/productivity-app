<%- include('../../partials/header') %>

<body>
  <div class="goal-container">
    <% if (goals.length > 0) { %>
      <div class="goal-grid">
        <% goals.forEach(goal => { %>
          <div class="goal-card">
            <div class="goal-card-body">
              <div class="goal-content">
                <div class="goal-info">
                  <strong>Your goal:</strong> <span class="goal-name"><%= goal.name %></span>
                  <small class="goal-type">(<%= goal.Type %>)</small>
                </div>
                <form action="/user/goals/<%= goal._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this goal?');">
                  <button type="submit" class="btn-delete-goal" title="Delete Goal">ðŸ—‘ Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="no-goals-msg">You have no goals yet.</p>
    <% } %>
  </div>
</body>

